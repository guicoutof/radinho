generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Queue {
  id      Int    @id @default(autoincrement())
  videoId String
  dj      Dj     @relation(fields: [djId], references: [id])
  djId    Int
  createdAt DateTime @default(now())
}

model Dj {
  id   Int    @id @default(autoincrement())
  name String
  queues Queue[]
  chats Chat[]
  createdAt DateTime @default(now())
}


model Chat {
  id   Int    @id @default(autoincrement())
  message String
  dj      Dj     @relation(fields: [djId], references: [id])
  djId    Int
  createdAt DateTime @default(now())
}
